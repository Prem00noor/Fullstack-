<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Product Filtering System</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
    }
    .product-list {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 15px;
      margin-top: 20px;
    }
    .product {
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 8px;
      text-align: center;
      background: #f9f9f9;
      transition: transform 0.2s;
    }
    .product:hover {
      transform: scale(1.05);
    }
    .no-results {
      color: red;
      margin-top: 20px;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <h2>Dynamic Product Filter</h2>

  <!-- Filter Dropdown -->
  <label for="categoryFilter">Filter by Category:</label>
  <select id="categoryFilter">
    <option value="all">All</option>
    <option value="electronics">Electronics</option>
    <option value="clothing">Clothing</option>
    <option value="books">Books</option>
  </select>

  <!-- Product Container -->
  <div class="product-list" id="productList"></div>
  <p class="no-results" id="noResults" style="display:none;">No products found!</p>

  <script>
    // Step 1: Product dataset
    const products = [
      { id: 1, name: "Smartphone", category: "electronics" },
      { id: 2, name: "Laptop", category: "electronics" },
      { id: 3, name: "Jeans", category: "clothing" },
      { id: 4, name: "T-Shirt", category: "clothing" },
      { id: 5, name: "JavaScript Book", category: "books" },
      { id: 6, name: "Novel", category: "books" }
    ];

    const productList = document.getElementById("productList");
    const categoryFilter = document.getElementById("categoryFilter");
    const noResults = document.getElementById("noResults");

    // Step 2: Function to display products
    function displayProducts(items) {
      productList.innerHTML = "";
      if (items.length === 0) {
        noResults.style.display = "block";
        return;
      }
      noResults.style.display = "none";
      items.forEach(product => {
        const div = document.createElement("div");
        div.classList.add("product");
        div.textContent = product.name;
        productList.appendChild(div);
      });
    }

    // Step 3: Filter logic
    function filterProducts() {
      const selectedCategory = categoryFilter.value;
      const filtered = selectedCategory === "all"
        ? products
        : products.filter(p => p.category === selectedCategory);
      displayProducts(filtered);
    }

    // Step 4: Event Listener
    categoryFilter.addEventListener("change", filterProducts);

    // Initial load
    displayProducts(products);
  </script>
</body>
</html>
